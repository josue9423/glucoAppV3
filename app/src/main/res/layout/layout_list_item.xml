<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="4dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/image_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_blood_listview"
        android:background="@drawable/bg_status_ok"/>

    <TextView
        android:id="@+id/text_glucosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inputNormalMargins"
        android:textSize="@dimen/textNormalSize"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/image_list"
        app:layout_constraintTop_toTopOf="@+id/image_list"
        app:layout_constraintBottom_toBottomOf="@+id/image_list"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_unidad"
        android:layout_marginLeft="@dimen/textSmallSize"
        android:textSize="@dimen/textSmallSize"
        app:layout_constraintStart_toEndOf="@+id/text_glucosa"
        app:layout_constraintBottom_toBottomOf="@id/text_glucosa" />

    <TextView
        android:id="@+id/text_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/inputNormalMargins"
        android:text="TextView"
        android:textSize="@dimen/textSmallSize"
        app:layout_constraintBottom_toBottomOf="@id/text_glucosa"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>